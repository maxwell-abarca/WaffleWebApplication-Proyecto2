@using WebApp.Models.Helpers;
@{
    Layout = "~/Views/Shared/PanelAdmin.cshtml";
}
<script src="~/Scripts/Views/Administradores.js"></script>
<div class="jumbotron infoCard">
    @Html.ActionLink("Registrar Administrador", "RegistroAdmin", "Home", new { @class = "btn btn-primary spaceBtn" })
</div>
<style>
    #btnActualizar {
        margin-left: 38%;
        margin-top: 2em;
    }
</style>
<div class="container">
    <div class="jumbotron" style="background-color:#fff">
        @Html.CtrlTable(viewName: "Administradores", id: "tblAdministradores", title: "Administradores", columnsTitle: "Cedula,Nombre,Primer Apellido,Segundo Apellido,Fecha de Nacimiento,Correo,Telefono,Estado,Tipo de Identificacion", ColumnsDataName: "Cedula,Nombre,PrimerApellido,SegundoApellido,FechaNacimiento,Correo,Telefono,Estado,TipoIdentificacion", onSelectFunction: "BindFields", colorHeader: "Red")
    </div>

    <div class="jumbotron" style="background-color:#fff">
        <form id="gestion_administrador">
            <div class="row">
                <div class="col">
                    @Html.CtrlInput(viewName: "Administradores", id: "inputCedula", label: "Cedula", placeholder: "", type: "number", columnDataName: "Cedula")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputNombre", label: "Nombre", placeholder: "", type: "text", columnDataName: "Nombre")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputPrimerApellido", label: "Primer Apellido", placeholder: "", type: "text", columnDataName: "PrimerApellido")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputSegundoApellido", label: "Segundo Apellido", placeholder: "", type: "text", columnDataName: "SegundoApellido")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputFechaNacimiento", label: "Fecha de Nacimiento", placeholder: "", type: "text", columnDataName: "FechaNacimiento")
                </div>
                <div class="col">
                    @Html.CtrlInput(viewName: "Administradores", id: "inputCorreo", label: "Correo", placeholder: "", type: "text", columnDataName: "Correo")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputTelefono", label: "Teléfono", placeholder: "", type: "text", columnDataName: "Telefono")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputEstado", label: "Estado", placeholder: "", type: "text", columnDataName: "Estado")
                    @Html.CtrlInput(viewName: "Administradores", id: "inputTipoIdentificacion", label: "Tipo de identificacion", placeholder: "", type: "text", columnDataName: "TipoIdentificacion")
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.CtrlButton(viewName: "Administradores", id: "btnActualizar", label: "Actualizar", onClickFunction: "Actualizar", style: "btn btn-primary spaceBtn")
                </div>
            </div>
        </form>
    </div>
</div>
