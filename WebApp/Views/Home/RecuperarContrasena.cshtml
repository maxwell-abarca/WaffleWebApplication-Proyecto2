@using WebApp.Models.Helpers;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar contraseña - Waffle</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/RecuperarContrasena.css" rel="stylesheet" />
    <script src="~/Scripts/Views/ControlActions.js"></script>
    <script src="~/Scripts/Views/RecuperarContrasena.js"></script>

</head>
<body>
    <div class="container">
        <div class="row align-items-center" style="height:10vh">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="logo"></div>
            </div>
        </div>
        <div class="row justify-content-between align-items-center" style="height:90vh">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="container">
                    <h2 style="margin-bottom: 1em">Recuperar contraseña.</h2>

                    <div id="firstDiv">
                        <h5 style="margin-bottom: 1em">Por favor ingresa el correo electrónico asociado a tu cuenta.</h5>
                        @Html.CtrlInput(viewName: "RecuperarContrasena", id: "inputCorreo", label: "Correo electrónico", placeholder: "", type: "text", columnDataName: "")
                        <p id="errorMessageEmail" class="errorMessage">Vaya... parece que este correo no es válido.</p>
                        @Html.CtrlButton(viewName: "RecuperarContrasena", id: "btnVerificarCorreo", label: "Siguiente", onClickFunction: "next", style: "btn btn-primary centerBtn")
                    </div>

                    <div class="" id="secondDiv">
                        <h5 style="margin-bottom: 1em">Te hemos enviado un código de verificación a tu número asociado.</h5>
                        @Html.CtrlInput(viewName: "RecuperarContrasena", id: "inputCodigo", label: "Código de verificación", placeholder: "", type: "text", columnDataName: "")
                        @Html.CtrlInput(viewName: "RecuperarContrasena", id: "inputContrasenaNueva", label: "Nueva contraseña", placeholder: "", type: "password", columnDataName: "")
                        @Html.CtrlInput(viewName: "RecuperarContrasena", id: "inputContrasenaConfirmar", label: "Confirmar contraseña", placeholder: "", type: "password", columnDataName: "")
                        <p id="errorMessage" class="errorMessage">Vaya... parece que los datos son incorrectos, por favor verifica tus datos y vuelve a intentarlo.</p>
                        @Html.CtrlButton(viewName: "RecuperarContrasena", id: "btnCambiarContrasena", label: "Cambiar contrasena", onClickFunction: "ChangePassword", style: "btn btn-primary centerBtn")
                    </div>
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

            </div>
        </div>
    </div>
</body>
</html>