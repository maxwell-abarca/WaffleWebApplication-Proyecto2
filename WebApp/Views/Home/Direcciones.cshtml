@using WebApp.Models.Helpers;

<html>
<head>
    <title>Agrega tu dirección</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/registroUsuario.css" rel="stylesheet" />

    <script src="~/Scripts/Views/ControlActions.js"></script>
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyDPjdm_vvORmMhPsDkI3lgIHdgkNqtuvrg"></script>
    <script src="~/Scripts/gmaps.js"></script>

</head>
<body>

    <div class="container">
        <div class="row align-items-center" style="height:10vh">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="logo"></div>
            </div>
        </div>
        <form id="registro_direccion">
            <div class="row justify-content-between align-items-center">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 align-self-center" style="margin-left:3em; margin-top:3em;">
                    <h1>Agrega tu dirección</h1>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:2em;">
                    @Html.CtrlMap(viewName: "Direcciones", id: "map", style: "mapForm")
                </div>
            </div>
        </form>
        <div class="row justify-content-between align-items-center" style="margin-top:3em">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-left: 30em; ">
                @Html.CtrlButton(viewName: "Direcciones", id: "btnAgregar", label: "Agregar dirección", onClickFunction: "AgregarDireccion", style: "btn btn-primary spaceBtn")
            </div>
        </div>




    </div>
</body>
</html>
    <script src="~/Scripts/Views/Direcciones.js"></script>