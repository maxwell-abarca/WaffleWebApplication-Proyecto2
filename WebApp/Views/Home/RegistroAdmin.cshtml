            </div>

            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "date_fecha_nacimiento", label: "Fecha de nacimiento", placeholder: "Ingrese su fecha de nacimiento", type: "date", columnDataName: "FechaNacimiento")
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "txt_correo", label: "Correo electrónico", placeholder: "Ingrese su correo electronico", type: "text", columnDataName: "Correo")
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "txt_contrasena", label: "Contraseña", placeholder: "Ingrese su contraseña", type: "password", columnDataName: "Contrasena")
