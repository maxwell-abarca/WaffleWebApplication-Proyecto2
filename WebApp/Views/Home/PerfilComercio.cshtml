@using WebApp.Models.Helpers;

@{
    ViewBag.Title = "ConfigComercio";
    Layout = "~/Views/Shared/PanelComercio.cshtml";
}
<script src="http://maps.google.com/maps/api/js?key=AIzaSyDPjdm_vvORmMhPsDkI3lgIHdgkNqtuvrg"></script>
<script src="~/Scripts/gmaps.js"></script>
<script src="~/Scripts/Views/ControlActions.js"></script>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<link href="~/Content/configUsuario.css" rel="stylesheet" />
<script src="~/Scripts/Views/PerfilComercio.js"></script>
<link href="~/Content/misComercios.css" rel="stylesheet" />

<h2 class="dashboardTitle">Comercio - Perfil</h2>

<div class="jumbotron infoCard">

    <div class="row justify-content-center" id="collapseRegistro">
        <form class="row justify-content-center" id="collapseRegistro">
            <div class="col-md-3">
                <img src="" class="profilePhoto" id="m_img_comercio">
                @Html.CtrlButton(viewName: "PerfilComercio", id: "btnCloudinary", label: "Subir imagen", onClickFunction: "showWidgetEdit", style: "btn btn-link link btnSpace")

            </div>
            <div class="col-md-3">
                @Html.CtrlDisabledInput(viewName: "PerfilComercio", id: "txtCedulaJuridica", label: "Cedula Juridica", placeholder: "", type: "text", columnDataName: "CedulaJuridica")
                @Html.CtrlDisabledInput(viewName: "PerfilComercio", id: "txtCedulaDueno", label: "Cedula Dueño", placeholder: "", type: "text", columnDataName: "CedulaDueno")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtIdCategoria", label: "Categoria", placeholder: "", type: "text", columnDataName: "IdCategoria")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtNombreComercial", label: "Nombre Comercial", placeholder: "", type: "text", columnDataName: "NombreComercial")
            </div>
            <div class="col-md-3">
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtRegimen", label: "Regimen", placeholder: "", type: "text", columnDataName: "RegimenTributario")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtTelefono", label: "Telefono", placeholder: "", type: "number", columnDataName: "Telefono")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtDireccionEscrita", label: "Dirección", placeholder: "", type: "text", columnDataName: "DireccionEscrita")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtHoraApertura", label: "Hora Apertura", placeholder: "", type: "text", columnDataName: "HoraApertura")
            </div>
            <div class="col-md-3">
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtHoraCierre", label: "Hora Cierre", placeholder: "", type: "text", columnDataName: "HoraCierre")
                @Html.CtrlDisabledInput(viewName: "PerfilComercio", id: "txtFechaCreacion", label: "Fecha Creación", placeholder: "", type: "text", columnDataName: "FechaCreacion")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtEstado", label: "Estado", placeholder: "", type: "text", columnDataName: "Estado")
                @Html.CtrlInput(viewName: "PerfilComercio", id: "txtIdCadena", label: "Cadena", placeholder: "", type: "text", columnDataName: "IdCadena")
                </div>
            @Html.CtrlMap("PerfilComercio", "map", "mapForm")
        </form>
    </div>
    <div class="border-top my-5"></div>
    <div margin="4em">
        <h3 class="dashboardTitle">Modificar perfil</h3>
        @Html.CtrlButton(viewName: "PerfilComercio", id: "mbtnActualizar", label: "Actualizar", onClickFunction: "Update", style: "btn btn-primary")
    </div>

</div>


