            </div>

            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                <img id="imagen_profile" src="https://res.cloudinary.com/drlznypvr/image/upload/v1574586105/user-profile_dw7kau.svg" class="imgUpload" />
                @Html.CtrlButton(viewName: "RegistroAdmi", id: "btnCloudinary", label: "Upload image", onClickFunction: "showWidget", style: "btn btn-link btnLink")
                @Html.CtrlButton(viewName: "RegistroAdmi", id: "btnSiguiente1", label: "Siguiente", onClickFunction: "SiguienteV1", style: "btn btn-primary btnCenter")
