@using WebApp.Models.Helpers;

@{
    Layout = "~/Views/Shared/PanelDuenoComercio.cshtml";
}

<script src="~/Scripts/Views/RegistroCadena.js"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<link href="~/Content/cadena.css" rel="stylesheet" />

<div class="jumbotron infoCard">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseRegistro" aria-expanded="false" aria-controls="collapseExample">
        Registrar nueva cadena
    </button>
    <div class="collapse" id="collapseRegistro">
        <div class="card card-body" style="background-color: white; margin-top:2em;">
            <div class="row justify-content-center align-items-center">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <img id="img_cadena" src="https://res.cloudinary.com/drlznypvr/image/upload/v1575514747/cadenaImagen_bnm4gy.png" class="profilePhoto" />
                    @Html.CtrlButton(viewName: "RegistroCadena", id: "btnCargarImagen", label: "Subir imagen", onClickFunction: "showWidget", style: "btn btn-link link btnSpace")
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    @Html.CtrlInput(viewName: "RegistroCadena", id: "txt_nombre", label: "Nombre de la cadena", placeholder: "", type: "text", columnDataName: "Nombre")
                    @Html.CtrlButton(viewName: "RegistroCadena", id: "btnRegistro", label: "Registrar", onClickFunction: "Registrar", style: "btn btn-primary btnQuery")
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron" style="background-color:#fff">
        @Html.CtrlTable(viewName: "Cadenas", id: "tblCadenas", title: "Mis Cadenas", columnsTitle: "Responsable,Nombre Cadena", ColumnsDataName: "CedulaDueno,Nombre", onSelectFunction: "BindFields", colorHeader: "red")
    </div>
</div>