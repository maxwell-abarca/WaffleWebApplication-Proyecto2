@using WebApp.Models.Helpers;
<html>
<head>
    <title>Registro</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/registroUsuario.css" rel="stylesheet" />
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="~/Scripts/Views/RegistroUsuario.js"></script>
    <script src="~/Scripts/Views/ControlActions.js"></script>
</head>
<body>
    <div class="container">

        <div class="row align-items-center" style="height:10vh">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="logo"></div>
            </div>
        </div>

        <form id="registro_usuario">

            <div class="row justify-content-between align-items-center" style="height:90vh" id="primer_formulario">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

                </div>

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <h5>Tipo de cédula</h5>
                    @Html.CtrlRadio(viewName: "RegistroUsuario", id: "radio_nacional", label: "Nacional", type: "radio", value: "Nacional")
                    @Html.CtrlRadio(viewName: "RegistroUsuario", id: "radio_extranjero", label: "Extranjero", type: "radio", value: "Extranjero")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_cedula", label: "Cédula", placeholder: "Ingrese la cédula", type: "number", columnDataName: "Cedula")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_nombre", label: "Nombre", placeholder: "Ingrese su nombre", type: "text", columnDataName: "Nombre")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_primer_apellido", label: "Primer apellido", placeholder: "Ingrese su primer apellido", type: "text", columnDataName: "PrimerApellido")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_segundo_apellido", label: "Segundo apellido", placeholder: "Ingrese su segundo apellido", type: "text", columnDataName: "SegundoApellido")
                    @Html.CtrlButton(viewName: "RegistroUsuario", id: "btnSiguiente", label: "Siguiente", onClickFunction: "Siguiente", style: "btn btn-primary btnCenter")
                </div>

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

                </div>
            </div>

            <div class="row justify-content-between align-items-center " style="height:90vh" id="primer_formulario_2">
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">

                </div>

                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "date_fecha_nacimiento", label: "Fecha de nacimiento", placeholder: "Ingrese su fecha de nacimiento", type: "date", columnDataName: "FechaNacimiento")
                    <div class="alert alert-success alert-dismissable" style="display: none" id="alert_container">
                        <button type="button" class="close" onclick="$('.alert').hide()">&times;</button>
                        <span id="alert_message"></span>
                    </div>
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_correo", label: "Correo electrónico", placeholder: "Ingrese su correo electronico", type: "text", columnDataName: "Correo")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_contrasena", label: "Contraseña", placeholder: "Ingrese su contraseña", type: "password", columnDataName: "Contrasena")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_contrasena_2", label: "Confirmar contraseña", placeholder: "Ingrese su contraseña de nuevo", type: "password", columnDataName: "")

                </div>

                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                    <img id="imagen_profile" src="https://res.cloudinary.com/drlznypvr/image/upload/v1574586105/user-profile_dw7kau.svg" class="imgUpload" />
                    @Html.CtrlButton(viewName: "RegistroUsuario", id: "btnCloudinary", label: "Upload image", onClickFunction: "showWidget", style: "btn btn-link btnLink")
                    @Html.CtrlButton(viewName: "RegistroUsuario", id: "btnSiguiente1", label: "Siguiente", onClickFunction: "SiguienteV1", style: "btn btn-primary btnCenter")
                </div>


                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">

                </div>
            </div>

            <div class="row justify-content-between align-items-center" style="height:90vh" id="segundo_formulario">

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

                </div>

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_telefono", label: "Teléfono", placeholder: "Ingrese su número de teléfono", type: "text", columnDataName: "Telefono")
                    @Html.CtrlInput(viewName: "RegistroUsuario", id: "txt_codigo", label: "Codigo de verificación", placeholder: "Ingrese el codigo de verificacion", type: "text", columnDataName: "CodigoVerificacion")
                    @Html.CtrlButton(viewName: "RegistroUsuario", id: "btnAtras", label: "Atras", onClickFunction: "Atras", style: "btn btn-link ")
                    @Html.CtrlButton(viewName: "RegistroUsuario", id: "btnVerificar", label: "Enviar código", onClickFunction: "Verificar", style: "btn btn-link float-right")
                    @Html.CtrlButton(viewName: "RegistroUsuario", id: "btnIngresar", label: "Verificar", onClickFunction: "Ingresar", style: "btn btn-primary btnCenter")
                </div>

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

                </div>




            </div>
        </form>
    </div>
</body>


</html>