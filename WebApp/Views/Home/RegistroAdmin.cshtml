        <div class="row justify-content-between align-items-center" style="height:90vh" id="primer_formulario">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

            </div>

            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <h5>Tipo de cédula</h5>
                @Html.CtrlRadio(viewName: "RegistroAdmi", id: "radio_nacional", label: "Nacional", type: "radio", value: "Nacional")
                @Html.CtrlRadio(viewName: "RegistroAdmi", id: "radio_extranjero", label: "Extranjero", type: "radio", value: "Extranjero")
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "txt_cedula", label: "Cédula", placeholder: "Ingrese la cédula", type: "number", columnDataName: "Cedula")
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "txt_nombre", label: "Nombre", placeholder: "Ingrese su nombre", type: "text", columnDataName: "Nombre")
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "txt_primer_apellido", label: "Primer apellido", placeholder: "Ingrese su primer apellido", type: "text", columnDataName: "PrimerApellido")
                @Html.CtrlInput(viewName: "RegistroAdmi", id: "txt_segundo_apellido", label: "Segundo apellido", placeholder: "Ingrese su segundo apellido", type: "text", columnDataName: "SegundoApellido")
                @Html.CtrlButton(viewName: "RegistroAdmi", id: "btnSiguiente", label: "Siguiente", onClickFunction: "Siguiente", style: "btn btn-primary btnCenter")
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

            </div>
        </div>

